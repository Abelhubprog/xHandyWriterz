{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "postcss.config.cjs",
    "tailwind.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "archive/**",
    // Legacy/deprecated folders that no longer exist or are not used
    "src/api/**",
    "src/routes/**",
    "src/pages/posts/**",
    "src/pages/profile/**",
    "src/pages/support/**",
    "src/pages/tools/**",
    "src/pages/deepresearch/**",
    "src/components/Comments/**",
    "src/components/Editor/**",
    "src/components/Documents/**",
    "src/components/contents/**",
    "src/components/navigation/**",
    "src/components/transitions/**",
    "src/components/interactions/**",
    // Files with known issues being addressed
    "src/components/layouts/Breadcrumbs.tsx",
    "src/components/layouts/Header.tsx"
  ]
}
