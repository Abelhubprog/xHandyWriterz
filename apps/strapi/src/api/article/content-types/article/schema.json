{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255,
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text"
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "text"
    },
    "body": {
      "type": "text"
    },
    "author": {
      "type": "string",
      "required": false
    },
    "category": {
      "type": "string"
    },
    "categories": {
      "type": "json"
    },
    "tags": {
      "type": "json"
    },
    "domain": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "adult-health",
        "mental-health",
        "child-nursing",
        "social-work",
        "technology",
        "ai",
        "crypto",
        "enterprise",
        "general"
      ]
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published"
      ],
      "default": "draft"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "typeTags": {
      "type": "json"
    },
    "seo": {
      "type": "component",
      "component": "seo.seo",
      "repeatable": false
    },
    "datePublished": {
      "type": "datetime"
    }
  }
}
