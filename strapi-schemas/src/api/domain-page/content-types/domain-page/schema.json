{
  "kind": "collectionType",
  "collectionName": "domain_pages",
  "info": {
    "singularName": "domain-page",
    "pluralName": "domain-pages",
    "displayName": "Domain Page",
    "description": "CMS-managed domain landing pages (Adult Nursing, AI, Crypto, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "tagline": {
      "type": "string",
      "description": "Short tagline for the domain (e.g., 'Expert Healthcare Writing Services')"
    },
    "description": {
      "type": "text",
      "description": "Brief description of the domain for listings and SEO"
    },
    "heroTitle": {
      "type": "string",
      "required": true,
      "description": "Main headline for the hero section"
    },
    "heroSubtitle": {
      "type": "text",
      "description": "Supporting text below the hero title"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "description": "Hero background image"
    },
    "heroVideo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["videos"],
      "description": "Optional hero background video"
    },
    "themeColor": {
      "type": "string",
      "default": "#6366f1",
      "description": "Primary theme color (hex code)"
    },
    "gradient": {
      "type": "string",
      "default": "from-indigo-500 to-purple-600",
      "description": "Tailwind gradient classes"
    },
    "iconKey": {
      "type": "string",
      "description": "Lucide icon key (e.g., 'Heart', 'Brain', 'Code')"
    },
    "highlights": {
      "type": "component",
      "component": "domain.domain-highlight",
      "repeatable": true,
      "description": "Key stats and features to display"
    },
    "features": {
      "type": "component",
      "component": "domain.domain-feature",
      "repeatable": true,
      "description": "Detailed feature cards"
    },
    "faqs": {
      "type": "component",
      "component": "domain.domain-faq",
      "repeatable": true,
      "description": "Frequently asked questions"
    },
    "featuredServices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service.service",
      "description": "Services to feature on this domain page"
    },
    "featuredArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "description": "Articles to feature on this domain page"
    },
    "testimonials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::testimonial.testimonial",
      "description": "Testimonials to feature on this domain page"
    },
    "ctaLabel": {
      "type": "string",
      "default": "Get Started"
    },
    "ctaUrl": {
      "type": "string",
      "default": "/dashboard"
    },
    "secondaryCtaLabel": {
      "type": "string"
    },
    "secondaryCtaUrl": {
      "type": "string"
    },
    "seo": {
      "type": "component",
      "component": "seo.seo",
      "repeatable": false
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
