{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Long-form content articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255,
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "maxLength": 500
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "content": {
      "type": "richtext"
    },
    "body": {
      "type": "richtext"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "authorName": {
      "type": "string",
      "required": false
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "tagsList": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    },
    "tags": {
      "type": "json"
    },
    "domain": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "adult-nursing",
        "adult-health",
        "mental-health",
        "child-nursing",
        "social-work",
        "technology",
        "ai",
        "crypto",
        "enterprise",
        "general"
      ],
      "default": "general"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "review", "scheduled", "published"],
      "default": "draft"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "typeTags": {
      "type": "json"
    },
    "seo": {
      "type": "component",
      "component": "seo.seo",
      "repeatable": false
    },
    "datePublished": {
      "type": "datetime"
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "readingTime": {
      "type": "integer",
      "default": 5
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "likeCount": {
      "type": "integer",
      "default": 0
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article"
    },
    "x402Price": {
      "type": "decimal",
      "default": 0.001
    },
    "x402Enabled": {
      "type": "boolean",
      "default": false
    },
    "previewToken": {
      "type": "string"
    }
  }
}
